{
    "compilerOptions": {
        "jsx": "react-jsx",
        "strict": true,
        "baseUrl": "./src",
        "esModuleInterop": true,
        "target": "es5",
        "lib": [
            "es5",
            "dom"
        ],
        "moduleResolution": "node",
        "paths": {
            "test-utils": [
                "./utils/test-utils"
            ]
        }
    },
    "include": [
        "src/**/*.tsx"
    ],
    "exclude": [
        "src/**/*.spec.ts"
    ]
}