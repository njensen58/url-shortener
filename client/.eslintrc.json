{
    "root": false,
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended",
        "plugin:react/jsx-runtime",
        "plugin:react-hooks/recommended",
        "plugin:jsx-a11y"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": [
            "./client/.tsconfig.json"
        ]
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {},
    "ignorePatterns": [
        "client/src/**/*.spec.ts",
        "server/src/**/*.spec.ts"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}